<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700"  Loaded="Window_Loaded">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="colorArea" Margin="10,10,10,10" Background="Black"/>

        <Grid Grid.ColumnSpan="3" Margin="233,0,233,5" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height ="4*"/>
                <RowDefinition Height ="4*"/>
                <RowDefinition Height ="4*"/>
                <RowDefinition Height ="3*"/>
                <RowDefinition Height ="2*"/>
            </Grid.RowDefinitions>
            <!--ここから追加-->
            <!--1-->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Ｒ" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Column="1" Grid.Row="0" Maximum="255" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True" TickFrequency="1" />
            <TextBox x:Name="rValue" Grid.Column="2" Grid.Row="0" FontSize="20" TextAlignment="Right" VerticalAlignment="Center" Text="{Binding ElementName=rSlider,Path = Value,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged }"/>
            <!--2-->
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Ｇ" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Column="1" Grid.Row="1" Maximum="255" VerticalAlignment="Center"  ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True" TickFrequency="1" />
            <TextBox x:Name="gValue" Grid.Column="2" Grid.Row="1" FontSize="20" TextAlignment="Right" VerticalAlignment="Center" Text="{Binding ElementName=gSlider,Path = Value,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged }"/>
            <!--3-->
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Ｂ" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Column="1" Grid.Row="2" Maximum="255" VerticalAlignment="Center"  ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True" TickFrequency="1" />
            <TextBox x:Name="bValue" Grid.Column="2" Grid.Row="2" FontSize="20" TextAlignment="Right" VerticalAlignment="Center" Text="{Binding ElementName=bSlider,Path = Value,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged }"/>
            <!--4-->
            <ComboBox x:Name="Combo" Margin="0,10,0,10" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" ItemsSource="{Binding}"  SelectedValue="{Binding Color}" SelectionChanged="Combo_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="80" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="LightGray" >
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Color}"/>
                            </Border.Background>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </Border>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label x:Name ="label" Content="Messages are show here" Margin="0,0,0,0" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Center" Width="460" Grid.ColumnSpan="3"/>
        </Grid>

        <Grid Grid.Column="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height ="2*"/>
                <RowDefinition Height ="7*"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>
            <Button Content="STOCK" FontSize="15"  Margin="10,0,80,0"  VerticalAlignment="Center" Click="StockButton_Click"/>
            <Button Content="DELETE" FontSize="15"    VerticalAlignment="Center"   Click="DeleteButton_Click" Margin="160,0,10,0"/>
            <ListBox x:Name="listBox" Margin="5,5,5,5 " Grid.Row="1 " SelectionChanged ="listBox_SelectionChanged">
            </ListBox>
            <!--ここから追加-->
        </Grid>
    </Grid>

</Window>

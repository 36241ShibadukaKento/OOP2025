<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="480" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="22*"/>
            </Grid.RowDefinitions>
            <Label   Grid.Row="0" Content="氏名"/>
            <TextBox Grid.Row="1" x:Name="NameTextBox"    Margin="5" />
            <Label   Grid.Row="2" Content="電話番号"/>
            <TextBox Grid.Row="3" x:Name="PhoneTextBox"   Margin="5" />
            <Label   Grid.Row="4" Content="住所"/>
            <TextBox Grid.Row="5" x:Name="AddressTextBox" Margin="5" />
            <Label   Grid.Row="6" Content="画像"/>
            <Button  Grid.Row="6" x:Name="PictureButton" Content="画像を選択" Margin="130,0,10,0" Click="PictureButton_Click"/>
            <Button  Grid.Row="6" x:Name="DeletePictureButton" Content="画像を削除 " Margin="50,0,150,0" Click="DeletePictureButton_Click"/>
            <Image   Grid.Row="7" x:Name="PictureBox" Margin="5" />
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Button   Grid.Row="0" Content="新規登録" x:Name="NewRegistration" Margin="5" HorizontalAlignment="Left"   Width="160"  Click="NewRegistration_Click"/>
            <Button   Grid.Row="0" Content="更新"     x:Name="UpDateButton"    Margin="5" HorizontalAlignment="Center" Width="160"  Click="UpDateButton_Click"/>
            <Button   Grid.Row="0" Content="削除"     x:Name="DeleteButton"    Margin="5" HorizontalAlignment="Right"  Width="160"  Click="DeleteButton_Click"/>
            <ListView Grid.Row="1" x:Name ="CustomerListView" Margin="5" SelectionChanged="ListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Image      Source ="{Binding Picture}" Width="100" Height="auto"  />
                                <StackPanel Grid.Column="1">
                                    <TextBlock   Text="{Binding Name}" FontSize="20"/>
                                    <TextBlock   Text="{Binding Phone}" FontSize="15"/>
                                    <TextBlock   Text="{Binding Address}" FontSize="15"/>
                                </StackPanel>

                            </Grid>
                           
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
